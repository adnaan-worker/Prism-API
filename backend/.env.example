# Backend Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/api_aggregator?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONN=2

# JWT Configuration (MUST change in production!)
JWT_SECRET=your-secret-key-change-in-production

# Server Configuration
PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
REQUEST_TIMEOUT=30s

# Embedding Service Configuration
EMBEDDING_URL=http://localhost:8765
EMBEDDING_TIMEOUT=30s
EMBEDDING_ENABLED=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=24h
CACHE_SEMANTIC_MATCH=true
CACHE_THRESHOLD=0.85
