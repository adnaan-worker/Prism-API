# Prism API Configuration
# Universal AI API Gateway by Adnaan

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/prism_api?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONN=2

# JWT Configuration (MUST change in production!)
JWT_SECRET=your-secret-key-change-in-production

# Server Configuration
PORT=8080
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
REQUEST_TIMEOUT=30s

# Initial Admin User (optional)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
